{% extends "::admin.html.twig" %}

{% block title %}{{ 'courses.list'|trans({},'backend') }}{% endblock %}
{% block page_title %}{{ 'courses.list'|trans({},'backend') }}{% endblock %}

{% import ':macros:dataTables.html.twig' as datatable %}

{% block page_style %}{{ datatable.css() }}{% endblock page_style %}
{% block page_script %}{{ datatable.js() }}{% endblock page_script %}
{% block javascripts_document_ready %}
    {{ datatable.ajax_component(path('app_admin_courses_datatable')) }}
{% endblock %}

{% block breadcrumb %}
    <li class="active">{{ 'courses.list'|trans({},'backend') }}</li>
{% endblock %}

{% block page_menu %}
    <a class="btn btn-success" href="{{ path('app_admin_courses_new') }}">
        <i class="fa fa-plus"></i> {{ 'courses.new'|trans({},'backend') }}
    </a>
{% endblock page_menu %}

{% block page_body %}
    <div class="row">
        <div class="col-xs-12">
            {% embed ":embed:datatable.html.twig" %}
                {% block table_head %}
                    <th data-type="string" data-data="name" data-name="name">{{ 'courses.name'|trans({},'backend') }}</th>
                    <th data-type="string" data-data="field" data-name="field" data-orderable="false">{{ 'courses.field'|trans({},'backend') }}</th>
                    <th data-type="string" data-data="membership" data-name="membership" data-orderable="false">{{ 'courses.membership'|trans({},'backend') }}</th>
                    <th data-type="string" data-data="description" data-name="description" data-orderable="false">{{ 'courses.description'|trans({},'backend') }}</th>
                {% endblock table_head %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
