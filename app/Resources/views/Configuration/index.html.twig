{% extends "::admin.html.twig" %}

{% block title %}{{ 'configuration.list'|trans({},'backend') }}{% endblock %}
{% block page_title %}{{ 'configuration.list'|trans({},'backend') }}{% endblock %}

{% import ':macros:dataTables.html.twig' as datatable %}

{% block page_style %}{{ datatable.css() }}{% endblock page_style %}
{% block page_script %}{{ datatable.js() }}{% endblock page_script %}
{% block javascripts_document_ready %}
    {{ datatable.ajax_component(path('app_admin_configuration_datatable')) }}
{% endblock %}

{% block breadcrumb %}
    <li class="active">{{ 'news.list'|trans({},'backend') }}</li>
{% endblock %}

{% block page_body %}
    <div class="row">
        <div class="col-xs-12">
            {% embed ":embed:datatable.html.twig" %}
                {% block table_head %}
                    <th data-type="string" data-data="field" data-name="field">{{ 'configuration.field'|trans({},'backend') }}</th>
                    <th data-type="string" data-data="description" data-name="description" data-orderable="false">{{ 'configuration.description'|trans({},'backend') }}</th>
                    <th data-type="string" data-data="value" data-name="value" data-orderable="false">{{ 'configuration.value'|trans({},'backend') }}</th>
                {% endblock table_head %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
