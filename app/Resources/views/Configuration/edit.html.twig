{% extends "::admin.html.twig" %}

{% block title %}{{ 'configuration.edit'|trans({},'backend') }}{% endblock %}
{% block page_title %}{{ 'configuration.edit'|trans({},'backend') }}{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('app_admin_configuration_index') }}">{{ 'configuration.list'|trans({},'backend') }}</a></li>
    <li class="active">{{ 'configuration.edit'|trans({},'backend') }}</li>
{% endblock %}

{% form_theme form with ':form:fields-material.html.twig' %}
{% block page_body %}
    <div class="row">
        <div class="col-xs-12">
            {% embed ":embed:form-horizontal.html.twig" %}
                {% block form_action%}
                    {{ path('app_admin_configuration_edit',{'id':entity.id}) }}
                {% endblock form_action %}
                {% block form_buttons %}
                    <div class="mgbt-xs-0 text-right">
                        <div class="col-md-12">
                            <button class="btn vd_btn vd_bg-green vd_white" type="submit" name="update"><i class="fa fa-fw fa-check-circle"></i> {{ 'update'|trans({},'resources') }}</button>
                            <button class="btn vd_btn vd_bg-green vd_white" type="submit" name="update_list"><i class="fa fa-fw fa-list"></i> {{ 'update.and.list'|trans({},'resources') }}</button>

                            <a class="btn vd_btn vd_bg-black vd_white" href="{{ path('app_admin_configuration_index') }}"><i class="fa fa-fw fa-times-circle"></i> {{ 'cancel'|trans({},'resources') }}</a>
                        </div>
                        <div class="col-md-12">
                            <span class="help-inline text-info">
                              {{ 'the.field.marqued.are.required'|trans({},'resources') }}
                            </span>
                        </div>
                    </div>
                {% endblock form_buttons %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
