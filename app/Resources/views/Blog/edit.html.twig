{% extends "::admin.html.twig" %}

{% block title %}{{ 'blog.edit'|trans({},'backend') }}{% endblock %}
{% block page_title %}{{ 'blog.edit'|trans({},'backend') }}{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('app_admin_blog_details') }}">{{ 'blog.details'|trans({},'backend') }}</a></li>
    <li class="active">{{ 'blog.edit'|trans({},'backend') }}</li>
{% endblock %}

{% form_theme form with ':form:fields-material.html.twig' %}
{% block page_body %}
    <div class="row">
        <div class="col-md-8">
            {% embed ":embed:form-horizontal.html.twig" %}
                {% block form_action%}
                    {{ path('app_admin_blog_edit') }}
                {% endblock form_action %}
                {% block form_attr %}enctype="multipart/form-data"{% endblock form_attr %}
                {% block form_buttons %}
                    <div class="col-xs-12 text-right">
                        <button class="btn green" type="submit" name="new_edit"><i class="fa fa-fw fa-edit"></i> {{ 'update'|trans({},'resources') }}</button>
                        {#<button class="btn vd_btn vd_bg-green vd_white" type="submit" name="new_list"><i class="fa fa-fw fa-list"></i> {{ 'update.and.list'|trans({},'resources') }}</button>#}

                        <a class="btn black" href="{{ path('app_admin_blog_details') }}"><i class="fa fa-fw fa-times-circle"></i> {{ 'cancel'|trans({},'resources') }}</a>
                    </div>
                    <div class="col-xs-12 text-right">
                            <span class="help-inline text-info">
                              {{ 'the.field.marqued.are.required'|trans({},'resources') }}
                            </span>
                    </div>
                {% endblock form_buttons %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
