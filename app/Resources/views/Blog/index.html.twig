                            <img src="{{ asset('backend/img/logo_dashboard.png') }}">
                        {% elseif blog.picture is not empty %}
                            {% set img_url = constant('IMAGES_UPLOAD_DIR',blog)~blog.picture %}
                            <img src="{{ asset(img_url) }}"/>
                        {% endif %}
