                    <!-- BEGIN TOPBAR ACTIONS -->
                    <div class="topbar-actions">
                        <!--BEGIN CODE USER-->
                        <div class="btn-group-img btn-group">
                            <div class="portlet-body util-btn-margin-bottom-5">
                                <a href="http://www.facebook.com" data-original-title="facebook"
