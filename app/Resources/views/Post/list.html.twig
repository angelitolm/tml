{% extends "::admin.html.twig" %}

{% block title %}{{ 'posts.list'|trans({},'backend') }}{% endblock %}
{% block page_title %}{{ 'posts.list'|trans({},'backend') }}{% endblock %}

{% import ':macros:dataTables.html.twig' as datatable %}

{% block page_style %}{{ datatable.css() }}{% endblock page_style %}
{% block page_script %}{{ datatable.js() }}{% endblock page_script %}
{% block javascripts_document_ready %}
    {{ datatable.ajax_component(path('app_admin_post_datatable')) }}
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('app_admin_blog_details') }}">{{ 'blog.details'|trans({},'backend') }}</a></li>
    <li class="active">{{ 'posts.list'|trans({},'backend') }}</li>
{% endblock %}

{% block page_menu %}
    <a class="btn btn-success" href="{{ path('app_admin_post_new') }}">
        <i class="fa fa-plus"></i> {{ 'posts.new'|trans({},'backend') }}
    </a>
{% endblock page_menu %}

{% block page_body %}
    <div class="row">
        <div class="col-xs-12">
            {% embed ":embed:datatable.html.twig" %}
                {% block table_head %}
                    <th data-type="string" data-data="title" data-name="title">{{ 'posts.title'|trans({},'backend') }}</th>
                    <th data-type="number" data-data="comments" data-name="comments" data-orderable="false">{{ 'posts.comments'|trans({},'backend') }}</th>
                    <th data-type="string" data-data="created" data-name="created" data-orderable="false">{{ 'posts.created'|trans({},'backend') }}</th>
                {% endblock table_head %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
