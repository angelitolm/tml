{% extends "::admin.html.twig" %}

{% block title %}{{ 'users.list'|trans({},'backend') }}{% endblock %}
{% block page_title %}{{ 'users.list'|trans({},'backend') }}{% endblock %}

{% import ':macros:dataTables.html.twig' as datatable %}

{% block page_style %}{{ datatable.css() }}{% endblock page_style %}
{% block page_script %}{{ datatable.js() }}{% endblock page_script %}
{% block javascripts_document_ready %}
    {{ datatable.ajax_component(path('app_admin_user_datatable')) }}
{% endblock %}

{% block breadcrumb %}
    <li class="active">{{ 'users.list'|trans({},'backend') }}</li>
{% endblock %}

