{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
  {% if invalid_username is defined %}
    {% from ':macros:flash.html.twig' import flash %}
    {{ flash('danger','resetting.request.invalid_username'|trans({'%username%': invalid_username}),'',0) }}
  {% endif %}
  <div class="form-group form-md-line-input" style="margin-left: 0px; margin-right: 0px;">
    <div class="input-icon" id="">
      <input type="text" placeholder="{{ 'resetting.request.username'|trans({},'security') }}"  name="username" class="form-control" required="required">
      <div class="form-control-focus"></div>
      <i class="fa fa-user"></i>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-12 text-right mgbt-xs-5">
      <button class="btn green" type="submit" id="login-submit">
        {{ 'resetting.request.username'|trans({},'FOSUserBundle') }} <i class="fa fa-edit"></i>
      </button>
    </div>
  </div>
</form>