{% extends '::base_admin.html.twig' %}

{% block head_style %}
    <link href="{{ asset('backend-metronic/css/login-5.min.css') }}" rel="stylesheet" type="text/css"/>
{% endblock head_style %}

{% block body_tag %}
<body class="login" style="background-color: #ffffff;">
{% endblock body_tag %}

{% block body_start %}
<div class="user-login-5">
	<div class="row bs-reset">
{% endblock body_start %}

{% block header_tag %}{% endblock header_tag %}

{% block section_tag %}
    <div class="col-md-6 bs-reset">
        <div class="login-bg" style="background-image:url({{ asset('backend-metronic/img/login/bg1.jpg') }})">
            <a href="{{ path('homepage') }}"><img class="login-logo" src="{{ asset('backend/img/logo_dashboard.png') }}"/></a>
        </div>
    </div>
    <div class="col-md-6 login-container bs-reset">
        <div class="login-content">
            <h1>{% block page_title %}{% endblock %}</h1>
            {% block fos_user_content %}{% endblock %}
        </div>
        <div class="login-footer">
            <div class="row bs-reset">
                <div class="col-xs-4 bs-reset">
                    <ul class="login-social">
                        {% block page_action %}{% endblock %}
                    </ul>
                </div>
                <div class="col-xs-8 bs-reset">
                    <div class="login-copyright text-right">
                        <p>Copyright &copy;{{ "now"|date('Y') }} {{ site_name }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock section_tag %}

{% block body_end %}
</div></div>
{% endblock body_end %}

{% block foot_script_assetic %}
    <script src="{{ asset('backend-metronic/global/plugins/backstretch/jquery.backstretch.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        jQuery(document).ready(function() {
            $('.login-bg').backstretch([
                        "{{ asset('backend-metronic/img/login/bg1.jpg') }}",
                        "{{ asset('backend-metronic/img/login/bg2.jpg') }}",
                        "{{ asset('backend-metronic/img/login/bg3.jpg') }}",
                        "{{ asset('backend-metronic/img/login/bg4.jpg') }}"
                    ], {
                        fade: 1000,
                        duration: 8000
                    }
            );
        });
    </script>
{% endblock foot_script_assetic %}